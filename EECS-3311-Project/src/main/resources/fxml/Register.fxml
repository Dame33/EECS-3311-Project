<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.EECS_3311_Project.controllers.RegisterController">
    <children>
        <AnchorPane fx:id="anchorPane_registerPage" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: white;">
            <children>
                <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

					<ImageView fitWidth="300" fitHeight="300" pickOnBounds="true" preserveRatio="true">
						<image>
						    <Image url="@../images/logo.png"/>
						</image>
					</ImageView>

                    <HBox spacing="10" prefWidth="250" maxWidth="250">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Text text="First Name"/>
                            <TextField fx:id="tf_FirstName" />
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Text text="Last Name"/>
                            <TextField fx:id="tf_LastName"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="5" prefWidth="250" maxWidth="250">
                        <Text text="Email Address"/>
                        <TextField fx:id="tf_email"/>
                    </VBox>

                    <VBox spacing="5" prefWidth="250" maxWidth="250">
                        <Text text="Account Type"/>
                        <ComboBox fx:id="comboBox" promptText="Select an Account Type"/>
                    </VBox>

                    <VBox spacing="5" prefWidth="250" maxWidth="250">
                        <Text text="Password"/>
                        <PasswordField fx:id="pf_password"/>
                    </VBox>

                    <VBox spacing="5" prefWidth="250" maxWidth="250">
                        <Text text="Confirm Password"/>
                        <PasswordField fx:id="pf_confirmPassword"/>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER" prefWidth="250" maxWidth="250">
                   		<Button fx:id="button_Back" text="Back" style="-fx-background-color: #2680c0; -fx-text-fill: white; -fx-cursor: hand;" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="button_Register" text="Register" style="-fx-background-color: #2680c0; -fx-text-fill: white; -fx-cursor: hand;" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
