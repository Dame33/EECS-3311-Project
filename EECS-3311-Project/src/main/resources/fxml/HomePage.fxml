<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.EECS_3311_Project.controllers.HomePageController">

    <center>
        <AnchorPane style="-fx-background-color: white;">

            <ImageView fx:id="image_profile" fitHeight="150.0" fitWidth="150.0"
                       layoutX="30.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/Default_pfp.jpg"/>
                </image>
            </ImageView>

            <VBox layoutX="200.0" layoutY="30.0" spacing="10">
                <Text fx:id="text_name" text="Name: "/>
                <Text fx:id="text_email" text="Email: "/>
                <Text fx:id="text_accountType" text="Account Type: "/>
                <Text fx:id="text_accountRole" text="Account Role: "/>
                <Text fx:id="text_hourlyRate" text="Hourly Rate: "/>
            </VBox>

            <VBox layoutX="450.0" layoutY="30.0" spacing="5">
                <Text text="Upcoming Bookings" />
                <Accordion fx:id="accordion_bookings" prefWidth="250.0" prefHeight="300.0">
                    <panes>
                        <TitledPane animated="false" text="Booking 1">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="250.0" />
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Booking 2">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="250.0" />
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Booking 3">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="250.0" />
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
            </VBox>

        </AnchorPane>
    </center>

</BorderPane>
