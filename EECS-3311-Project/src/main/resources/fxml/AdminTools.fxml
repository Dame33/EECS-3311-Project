<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.EECS_3311_Project.controllers.AdminToolsController">

    <center>
        <!-- Wrap both button and table in a VBox -->
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Top-left Add Room Button -->
            <HBox alignment="TOP_LEFT">
                <Button text="Add New Room" onAction="#handleAddRoom"/>
            </HBox>

            <!-- Centered Table -->
            <HBox alignment="CENTER">
                <TableView fx:id="roomsTable" editable="true">
                    <columns>
                        <TableColumn fx:id="colRoomName" text="Room Name"/>
                        <TableColumn fx:id="colBuildingName" text="Building"/>
                        <TableColumn fx:id="colCapacity" text="Capacity"/>
                        <TableColumn fx:id="colActive" text="Active"/>
                        <TableColumn fx:id="colEdit" text="Edit"/>
                        <TableColumn fx:id="colDelete" text="Delete"/>
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </center>
</BorderPane>
