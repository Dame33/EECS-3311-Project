<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:id="anchorPane_SignInPage" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.EECS_3311_Project.controllers.SignInController">
    <children>

        <VBox spacing="20" alignment="CENTER" prefWidth="600" prefHeight="400" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <ImageView fitWidth="300" fitHeight="300" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>

            <VBox spacing="5" alignment="TOP_CENTER">
		    <VBox spacing="5" alignment="CENTER">
		        <HBox spacing="5" prefWidth="250" maxWidth="250" alignment="CENTER_LEFT">
		            <Text text="Email"/>
		            <Text text="*" fill="RED"/>
		        </HBox>
		        <TextField fx:id="tf_email" prefWidth="250" maxWidth="250"/>
		    </VBox>
		
		    <VBox spacing="5" alignment="CENTER">
		        <HBox spacing="5" prefWidth="250" maxWidth="250" alignment="CENTER_LEFT">
		            <Text text="Password"/>
		            <Text text="*" fill="RED"/>
		        </HBox>
		        <PasswordField fx:id="tf_password" prefWidth="250" maxWidth="250"/>
		    </VBox>
		</VBox>

            <Button fx:id="button_signIn" text="Sign In" mnemonicParsing="false" prefWidth="150" style="-fx-background-color: #2680c0; -fx-cursor: hand;" textFill="WHITE"/>

            <HBox spacing="5" alignment="CENTER">
                <Text text="Not a User?"/>
                <Button fx:id="button_signUp" text="Sign Up!" style="-fx-background-color: transparent; -fx-cursor: hand;" textFill="#2680c0" underline="true"/>
            </HBox>



        </VBox>
    </children>
</AnchorPane>
